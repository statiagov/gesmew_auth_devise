<%= render :partial => 'gesmew/shared/error_messages', :locals => { :target => @gesmew_user } %>
<h2><%= Gesmew.t(:change_my_password) %></h2>

<%= form_for @gesmew_user, :as => :gesmew_user, :url => gesmew.update_password_path, :method => :put do |f| %>
  <p>
    <%= f.label :password, Gesmew.t(:password) %><br />
    <%= f.password_field :password %><br />
  </p>
  <p>
    <%= f.label :password_confirmation, Gesmew.t(:confirm_password) %><br />
    <%= f.password_field :password_confirmation %><br />
  </p>
  <%= f.hidden_field :reset_password_token %>
  <%= f.submit Gesmew.t(:update), :class => 'button primary' %>
<% end %>
