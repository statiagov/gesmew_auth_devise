<fieldset id="password-credentials">
  <div class="form-group">
    <%= f.email_field :email, :class => 'form-control', :placeholder => Gesmew.t(:email) %>
  </div>
  <hr />
  <div class="form-group">
    <%= f.password_field :password, :class => 'form-control', :placeholder => Gesmew.t(:password) %>
  </div> 
  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Gesmew.t(:confirm_password) %>
  </div> 
</fieldset>
<div data-hook="signup_below_password_fields"></div>