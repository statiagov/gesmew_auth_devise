<%= render :partial => 'gesmew/shared/error_messages', :locals => { :target => @gesmew_user } %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Gesmew.t(:change_your_password) %></h3>
    </div>
    <div class="panel-body">
      <%= form_for @gesmew_user, :as => :gesmew_user, :url => gesmew.update_password_path, :method => :put do |f| %>
        <p>
          <%= f.label :password, Gesmew.t(:password) %>
          <%= f.password_field :password, :class => "form-control" %>
        </p>
        <p>
          <%= f.label :password_confirmation, Gesmew.t(:confirm_password) %>
          <%= f.password_field :password_confirmation, :class => "form-control" %>
        </p>
        <%= f.hidden_field :reset_password_token %>
        <%= f.submit Gesmew.t(:update), :class => 'btn btn-lg btn-success btn-block' %>
      <% end %>
    </div>
  </div>
</div>
