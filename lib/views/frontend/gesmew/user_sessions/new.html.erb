<% @body_id = 'login' %>
<div class="col-md-6 <%= request.path == gesmew.login_path ? "col-md-offset-3" : "" %>">
  <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= Gesmew.t(:login_as_employee) %></h3>
    </div>
      <div id="existing-customer" class="panel-body" data-hook="login">
          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>
          <%= render :partial => 'gesmew/shared/login' %>
          <div class="text-center">
            <%= link_to Gesmew.t(:forgot_password), gesmew.recover_password_path %>
          </div>
          <div data-hook="login_extras"></div>
      </div>
  </div>
</div>
